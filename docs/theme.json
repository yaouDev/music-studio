{
  "theme": {
    "fonts": {
      "body": "Montserrat, sans-serif",
      "heading": "Poppins, sans-serif",
      "baseSize": "18px",
      "fontWeights": {
        "body": 400,
        "heading": 700
      },
      "headingSizes": {
        "h1": "3rem",
        "h2": "2.5rem",
        "h3": "2rem"
      }
    },
    "colors": {
      "primary": "#0D0D0D",
      "primaryLight": "#1A1A1A",
      "primaryDark": "#000000",
      "text": "#E0E0E0",
      "textLight": "#A3A3A3",
      "background": "#121212",
      "backgroundDark": "#0A0A0A",
      "accent": "#E63946",
      "shadow": "rgba(0, 0, 0, 0.7)"
    },
    "spacing": {
      "base": "1.25rem",
      "large": "2.5rem"
    }
  }
}
